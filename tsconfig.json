{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ESNext", "DOM"],
		"strict": true,
		"outDir": "dist",
		"declaration": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@wandler": ["packages/wandler/index.ts"],
			"@wandler/*": ["packages/wandler/*"]
		}
	},
	"include": ["packages/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
